<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/purbot">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Saved Groceries"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <!-- Saved Grocery List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savedGroceryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp" />

    <!-- Total Cost Display -->
    <TextView
        android:id="@+id/totalCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: â‚¹0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:padding="8dp" />

    <!-- Save Updated Grocery List Button -->
    <Button
        android:id="@+id/saveGroceryListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Updated Grocery List"
        android:backgroundTint="@color/purple_200"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
